<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.fab.tris.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


            <ImageButton
                android:src="@mipmap/emptycell"
                android:background="@null"
                android:id="@+id/cell0"

                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/cell1"
                android:layout_alignStart="@+id/cell3" />

        <ImageButton
                android:src="@mipmap/emptycell"
                android:background="@null"
                android:id="@+id/cell1"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
            android:layout_alignTop="@+id/cell2"
            android:layout_centerHorizontal="true" />

        <ImageButton
    android:src="@mipmap/emptycell"
    android:background="@null"
                android:id="@+id/cell2"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
            android:layout_above="@+id/cell5"
            android:layout_alignParentEnd="true" />

        <ImageButton
    android:src="@mipmap/emptycell"
    android:background="@null"
                android:id="@+id/cell3"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
            android:layout_below="@+id/cell0"
            android:layout_alignStart="@+id/cell6" />

        <ImageButton
    android:src="@mipmap/emptycell"
    android:background="@null"
                android:id="@+id/cell4"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
            android:layout_above="@+id/cell8"
            android:layout_centerHorizontal="true" />

        <ImageButton
    android:src="@mipmap/emptycell"
    android:background="@null"
                android:id="@+id/cell5"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
            android:layout_above="@+id/cell8"
            android:layout_alignParentEnd="true" />

        <ImageButton
    android:src="@mipmap/emptycell"
    android:background="@null"
                android:id="@+id/cell6"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
            android:layout_below="@+id/cell4"
            android:layout_alignParentStart="true" />

        <ImageButton
    android:src="@mipmap/emptycell"
    android:background="@null"
                android:id="@+id/cell7"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
    android:src="@mipmap/emptycell"
    android:background="@null"
                android:id="@+id/cell8"
                android:padding="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/cell5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/resocontoTxt"
        android:layout_alignTop="@+id/newGame"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newGame"
        android:src="@mipmap/newgameblu"
        android:background="@null"
        android:layout_above="@+id/cell0"
        android:clickable="false"
        android:visibility="invisible"
        android:layout_alignParentStart="true" />

</RelativeLayout>
